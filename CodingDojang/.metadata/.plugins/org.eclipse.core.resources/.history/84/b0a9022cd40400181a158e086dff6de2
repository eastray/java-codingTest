package selfNumber;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.stream.IntStream;

public class SelfNumber {

	private long selfNumber() {

		int[] arr = new int[5001];

		for (int i = 1; i < 5000; i++) {
			int temp = getGenerator(i);

			if (temp < 5000)
				arr[temp] = temp;
		}
		
		return factorial(5000) - (IntStream.of(arr).mapToLong(ele -> ele).sum());
	}
	
	public long factorial(int n) {
		long temp = 0;
		
		for(int i = 1; i <= n; i++)
			temp += i;
		
		return temp;
	}

	public ArrayList<Integer> getArrayNumber(int i) {
		ArrayList<Integer> list = new ArrayList<Integer>();
		int temp = i;

		while (true) {
			if (temp / 10 != 0) {
				list.add(temp % 10);
				temp = temp / 10;
				
			} else {
				list.add(temp % 10);
				break;
			}
		}

		return list;
	}

	public int getGenerator(int n) {
		ArrayList<Integer> list = getArrayNumber(n);

		return list.stream().mapToInt(ele -> ele).sum() + n;
	}


	public static void main(String[] args) {
		// TODO Auto-generated method stub
		SelfNumber sn = new SelfNumber();

		System.out.println(sn.selfNumber());
	}

}

package selfNumber;

import java.util.ArrayList;
import java.util.Arrays;

public class SelfNumber {

	private long selfNumber() {

		int[] arr = new int[5001];
		long result = 0;

		for (int i = 1; i < 5000; i++) {
			int temp = getGenerator(i);

			if (temp < 5000)
				arr[temp] = temp;
		}
		
		System.out.println(Arrays.toString(arr));

		return result;
	}

	public ArrayList<Integer> getArrayNumber(int i) {
		ArrayList<Integer> list = new ArrayList<Integer>();
		int temp = i;

		while (true) {
			if (temp / 10 != 0) {
				list.add(temp % 10);
				temp = temp / 10;
			} else {
				list.add(temp % 10);
				break;
			}
		}

		return list;
	}

	public int getGenerator(int n) {
		ArrayList<Integer> list = getArrayNumber(n);

		return list.stream().mapToInt(ele -> ele).sum() + n;
	}

	public boolean isSelfNumber(int n) {

		ArrayList<Integer> list = getArrayNumber(n);

		System.out.println(Arrays.toString(list.toArray()));

		return true;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		SelfNumber sn = new SelfNumber();

		System.out.println(sn.selfNumber());
	}

}

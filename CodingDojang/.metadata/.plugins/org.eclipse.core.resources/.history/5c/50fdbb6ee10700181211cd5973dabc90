package insertComma;

public class InsertComma {
	
	public String addComma(String str){
		
		if(str.length() == 0)
			return
		
		if(str.length() == 1)
			return str.concat(",");
		
		return addComma(Integer.toString(Integer.parseInt(str)/1000)).concat(",");
		
	}
	
	public String insertComma(int n) {
		
		String str = Integer.toString(n);
		
		if(str.contains(".")){
		}
		
		return null;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		InsertComma ic = new InsertComma();
		
		System.out.println(ic.insertComma(1000));
	}

}

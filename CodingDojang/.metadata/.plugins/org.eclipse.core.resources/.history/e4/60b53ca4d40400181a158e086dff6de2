//
//		for (int i = 0; i < str.length(); i++)
//			result += Integer.parseInt(str.substring(i, i + 1));

		// while (true) {
		// if (temp / 10 != 0) {
		// list.add(temp % 10);
		// temp = temp / 10;
		//
		// } else {
		// list.add(temp % 10);
		// break;
		// }
		// }

		return list;
	}

	public int getGenerator(int n) {
		int result = 0;

		String str = Integer.toString(n);

		for (int i = 0; i < str.length(); i++)
			result += Integer.parseInt(str.substring(i, i + 1));
		
		return result;

		// ArrayList<Integer> list = getArrayNumber(n);
		//
		// return list.stream().mapToInt(ele -> ele).sum() + n;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		SelfNumber sn = new SelfNumber();

		System.out.println(sn.selfNumber());
	}

}

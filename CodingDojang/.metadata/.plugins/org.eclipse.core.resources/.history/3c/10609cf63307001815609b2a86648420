package tugOfWar;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Scanner;

public class TugOfWar {

	public int[] tugOfWar(int[] arr) {

		Arrays.sort(arr);

		// int[] first = new int[arr.length/2];
		// int[] second = new int[arr.length/2];

		ArrayList<Integer> first = new ArrayList<Integer>();
		ArrayList<Integer> second = new ArrayList<Integer>();

		for (int ele : arr) {
			if (first.isEmpty())
				first.add(ele);
			else if (second.isEmpty())
				second.add(ele);

			if (first.get(first.size() - 1) > second.get(second.size() - 1))
				second.add(ele);
			else
				first.add(ele);
		}
		
		if(first.size() > second.size())
			second.add(0);
		else if (first.size() < second.size())
			first.add(0);
		
		System.out.println(Arrays.toString(first.toArray()));
		System.out.println(Arrays.toString(second.toArray()));

		return null;
	}

	public static void main(String[] args) {

		TugOfWar tow = new TugOfWar();

//		@SuppressWarnings("resource")
//		Scanner scanner = new Scanner(System.in);
//		int n = scanner.nextInt();
//		int[] array = new int[n];

//		for (int i = 0; i < n; i++) {
//			array[i] = scanner.nextInt();
//		}
		int[] array = {45, 55, 70, 60, 50, 76}

		System.out.println(Arrays.toString(tow.tugOfWar(array)));

	}
}

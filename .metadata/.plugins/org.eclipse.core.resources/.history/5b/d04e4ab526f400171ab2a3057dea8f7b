package caesar;

public class Caesar {

	private String caesar(String s, int n) {

		// char[] stringArray = s.replaceAll("\\s", "").toCharArray();
		String result = "";
		int initTemp = 0;

		char[] charArray = s.toCharArray();
		for (char ele : charArray) {
			if (ele == ' ') {
				continue;
			} else {

				initTemp = (ele <= 132) ? 132 : 172;

				ele += n;

				while (ele > initTemp)
					ele -= 31;

				result += ele;
			}
		}

		// for (int i = 0; i < stringArray.length; i++) {
		// //if(stringArray[i] == )
		// if(stringArray[i]=='z' || stringArray[i] == 'Z'){
		// stringArray[i] = (stringArray[i] == 'z') ? 'a':'A';
		// stringArray[i] += n-1;
		// }else
		// stringArray[i] += n;
		//
		// }
		//
		// for (char ele : stringArray)
		// result += ele+" ";

		return result;
	}

	public static void main(String[] args) {
		Caesar c = new Caesar();
		System.out.println("s는 'a B z', n은 4인 경우: " + c.caesar("a B z", 4));
		System.out.println("s는 'a B c D', n은 4인 경우: " + c.caesar("a B c D", 4));
		System.out.println("s는 'GJgEQpMnVPbahEoG  ozcS dMQOVwBYDMIEHQNGAJjhTLelPn ', n은 44인 경우: "
				+ c.caesar("GJgEQpMnVPbahEoG  ozcS dMQOVwBYDMIEHQNGAJjhTLelPn ", 44));
		System.out.println("s는 'G', n은 44인 경우: " + c.caesar("G", 44));
	}

}

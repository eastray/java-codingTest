package noContinuous;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class NoContinuous {

	private int[] noContinuous(String str) {

		ArrayList<Integer> list = new ArrayList<Integer>();
		int temp = 0;

		char[] charArray = str.toCharArray();
		list.add(Character.getNumericValue(charArray[0]));
		System.out.println(list.get(0));

		for (int i = 1; i < charArray.length; i++) {
			if(list.get(list.size()-1) != charArray[i]){
				System.out.println(list.get(list.size()-1) + ", " + charArray[i]);
				list.add(Character.getNumericValue(charArray[i]));
			}
			
		}
		
		System.out.println(Arrays.toString(list.toArray()));

		return null;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		NoContinuous nc = new NoContinuous();

		System.out.println(Arrays.toString(nc.noContinuous("133303")));

	}

}

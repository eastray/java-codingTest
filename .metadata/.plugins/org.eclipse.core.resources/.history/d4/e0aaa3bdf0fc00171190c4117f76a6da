package jadenCase;

public class JadenCase {

	public String jadenCase(String str) {
		System.out.println("str: " + str);
		System.out.println("length: " + str.split(" ").length + 1);
		
		if(str == null)
			return str;

		return Character.toUpperCase(str.substring(0, str.split(" ").length).charAt(0))
				+ str.substring(1, str.split(" ").length) + jadenCase(str.substring(str.split(" ").length + 1));
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		JadenCase jc = new JadenCase();

		System.out.println(jc.jadenCase("3people unFollowed me for the last week"));
	}

}

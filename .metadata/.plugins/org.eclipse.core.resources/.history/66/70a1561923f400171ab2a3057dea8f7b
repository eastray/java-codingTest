package caesar;

import java.util.Arrays;
import java.util.List;
import java.util.stream.Collectors;

public class Caesar {

	private String caesar(String s, int n) {

		char[] stringArray = s.replaceAll("\\s", "").toCharArray();

		for (int i = 0; i < stringArray.length; i++) {
			if(stringArray[i]=='z' || stringArray[i] == 'Z'){
				stringArray[i] = (stringArray[i] == 'z') ? 'a':'A';
				stringArray[i] += n-1;
			}else{
				stringArray[i] += n;
			}
		}
		
		String result = "";

		for (char ele : stringArray){
			result += ele+" ";
		}
			//System.out.println(Character.toChars((ele)));

		
		// 함수를 완성하세요.

		return result;
	}

	public static void main(String[] args) {
		Caesar c = new Caesar();
		System.out.println("s는 'a B z', n은 4인 경우: " + c.caesar("a B z", 4));
	}

}

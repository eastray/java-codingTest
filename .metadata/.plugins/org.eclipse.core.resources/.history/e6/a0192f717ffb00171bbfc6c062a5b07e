package strangeSort;

import java.util.Arrays;

public class StrangeSort {

	private String[] swap(String[] str, int i, int j) {
		String temp = str[i];
		str[i] = str[j];
		str[j] = temp;
		
		return str;
	}

	private String[] strangeSort(String[] strings, int n) {
		
		for(int i = 1; i < strings.length; i++){
			if((int)strings[i-1].charAt(n) > (int)strings[i].charAt(n))
				swap(strings, i-1, i);
		}
		
		System.out.println(Arrays.toString(strings));

		return null;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		StrangeSort ss = new StrangeSort();

		System.out.println(Arrays.toString(ss.strangeSort(new String[] { "car", "let", "zoo" }, 1)));
		System.out.println(Arrays.toString(ss.strangeSort(new String[] { "zoo", "let", "car" }, 1)));
	}

}

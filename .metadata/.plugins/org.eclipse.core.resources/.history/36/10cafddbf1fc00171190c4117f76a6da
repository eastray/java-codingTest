package jadenCase;

import java.util.Arrays;

public class JadenCase {

	public String jadenCase(String str) {
		System.out.println("str: " + str);
		System.out.println("array: " + Arrays.toString(str.split(" ")));
		
		if (str == null)
			return str;

		System.out.println("length: " + str.split("").length);
		String prefix = str.substring(0, str.split(" ").length);
		String surfix = str.substring(str.split(" ").length + 1, str.length());
		System.out.println("prefix: " + prefix);
		System.out.println("surfix: " + surfix);

		return Character.toUpperCase(prefix.charAt(0)) + str.substring(1, str.split(" ").length) + jadenCase(surfix);
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		JadenCase jc = new JadenCase();

		System.out.println(jc.jadenCase("a b c d e f"));
		System.out.println(jc.jadenCase("3people unFollowed me for the last week"));
	}

}

package sequenceSorted;

import java.util.Arrays;

public class SequenceSorted {
	
	public int[] sortedSequence(int[] arr){
		
		int[] subArr = arr.clone();
				//Arrays.copyOf(arr, arr.length);
		int[] result = new int[arr.length];
		
		Arrays.sort(subArr);
		
		System.out.println(Arrays.toString(arr));
		System.out.println(Arrays.toString(subArr));
		
		for(int i = 0; i < arr.length;i++)
			result[i] = Arrays.binarySearch(arr, subArr[i]);
		
		return result;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int[] n = {2, 3, 1, 4};
		
		SequenceSorted ss = new SequenceSorted();
		
		System.out.println(Arrays.toString(ss.sortedSequence(n)));
		
		
	}

}

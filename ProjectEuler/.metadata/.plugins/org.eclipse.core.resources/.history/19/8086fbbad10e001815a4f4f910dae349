package problem3;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class PrimeDivisor {

	private List<Integer> findPrimeDivisors(int n) {
		List<Integer> list = new ArrayList<Integer>();

		while (true) {
			for (int i = 2; i < n; i++) {
				if (n % i == 0) {
					list.add(i);
					n /= i;
				}

				if (i + 1 == n) {
					list.add(n);
					n = 0;
				}
			}

			if (n == 0)
				break;
		}

		return list;
	}

	private int maxOfPrimeDivisor(int n) {
		return findPrimeDivisors(n).stream().mapToInt(m -> m).max().getAsInt();
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		PrimeDivisor pd = new PrimeDivisor();

		System.out.println(pd.findMaxOfPrimeDivisors(13195));
	}

}

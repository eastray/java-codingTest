package problem9;

public class Pythagoras {

	private int pythagoras(int n) {
		int a = 3;
		int b = 4;
		int c = 5;
		int i = 0;
		int j = 0;
		int k = 0;

		// for (int i = 2; i < n/2; i++) {
		// while(true) {
		//
		// if (Math.pow((i * a), 2) + Math.pow((i * b), 2) == Math.pow((i * c),
		// 2)) {
		// System.out.println("Math.pow((i * a), 2): " + Math.pow((i * a), 2) +
		// ", Math.pow((i * b), 2): "
		// + Math.pow((i * b), 2) + ", Math.pow((i * c), 2): " + Math.pow((i *
		// c), 2));
		//
		// System.out.println("(i*a): " + (i * a) + ", (i*b): " + (i * b) + ",
		// (i*c): " + (i * c) + " : "
		// + ((i * a) + (i * b) + (i * c)));
		// }
		//
		// if(1008 == ((i * a) + (i * b) + (i * c)))
		// return ((i * a) * (i * b) * (i * c));
		//
		// i++;
		// }

		while (true) {

			if (Math.pow((i + a), 2) + Math.pow((j + b), 2) == Math.pow((k + c), 2)) {
				System.out.println("Math.pow((i * a), 2): " + Math.pow((i * a), 2) + ", Math.pow((j * b), 2): "
						+ Math.pow((j * b), 2) + ", Math.pow((k * c), 2): " + Math.pow((k * c), 2));

				k++;
			}

			//System.out.println("i: " + i + " j: " + j + " k: " + k);
			System.out.println(((i + a) + (k + b) + (k + c)));

			if (1008 < ((i + a) + (j + b) + (k + c)))
				return ((i + a) + (k + b) + (k + c));

			if (Math.pow((i + a), 2) + Math.pow((j + b), 2) < Math.pow((k + c), 2)) {

				for (int l = j; l < (k + c); l++) {

					if (Math.pow((i + a), 2) + Math.pow((l + b), 2) == Math.pow((k + c), 2))
						System.out.println("Math.pow((i * a), 2): " + Math.pow((i * a), 2) + ", Math.pow((l * b), 2): "
								+ Math.pow((l * b), 2) + ", Math.pow((k * c), 2): " + Math.pow((k * c), 2));
				}

				i++;
				j++;
				
			} else if (Math.pow((i + a), 2) + Math.pow((j + b), 2) > Math.pow((k + c), 2))
				k++;

			if (k <= j)
				k++;

		}

	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Pythagoras pytha = new Pythagoras();

		System.out.println("result: " + pytha.pythagoras(1000));
	}


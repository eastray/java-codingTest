package problem1;

import java.util.stream.IntStream;

public class GetMultipleOfN {

	private int getMultiple(int n) {
		int result = 0;

		for (int i = 1; i < n; i++)
			if (i % 3 == 0 || i % 5 == 0)
				result += i;

		return result;
	}

	private int getMultipleUsingStream(int n) {
		return IntStream.rangeClosed(1, n).filter(m -> (m % 3 == 0 || m % 5 == 0)).sum();
	}
	

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		GetMultipleOfN gmon = new GetMultipleOfN();

		System.out.println(gmon.getMultiple(10));
		System.out.println(gmon.getMultiple(1000));
		System.out.println();

		System.out.println(gmon.getMultipleUsingStream(10));
		System.out.println(gmon.getMultipleUsingStream(1000));
	}

}

package problem10;

import java.util.ArrayList;
import java.util.Arrays;

public class PrimeNumber {

	private ArrayList<Integer> getPrimeNumber(int n) {

		ArrayList<Integer> list = new ArrayList<Integer>();

		for (int i = 2; i < n; i++) {

			boolean flag = true;
			int temp = i % 10;

			if (i == 2 || i == 5 || temp == 1 || temp == 3 || temp == 7 || temp == 9) {
				for (int j = 2; j < i; j++) {
					if (i % j == 0) {
						flag = false;
						break;
					}
				}

				if (flag)
					list.add(i);

			}

		}

		// return list.stream().mapToInt(m->m).toArray();
		return list;
	}

	private int getPrimeNumber2(int n) {
		boolean[] arr = new boolean[n + 1];
		int result = 0;

		arr[0] = true;
		arr[1] = true;

		for (int i = 2; (i * i) <= n; i++) {
			if (arr[i] == false)
				for (int j = i * i; j <= n; j += i)
					arr[j] = true;
		}

		System.out.println(Arrays.toString(arr));

		for (int i = 2; i <= n; i++)
			if(arr[i] == false)
				result += i;

			return result;
	}

	private int sumOfPrimeNumber(int n) {

		System.out.println(getPrimeNumber2(n));

		return 0;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		PrimeNumber pn = new PrimeNumber();

		System.out.println(pn.sumOfPrimeNumber(1000000));

	}

}

package problem3;

import java.util.ArrayList;
import java.util.Arrays;

public class PrimeDivisor {

	private int[] findPrimeDivisor(int n) {
		ArrayList<Integer> list = new ArrayList<Integer>();
		
		while(true){
			for(int i = 2; i < n; i++)
				if(n % i == 0){
					list.add(i);
					n /= i;
				}
			
			if(n == 0)
				break;
		}
		
		int[] array = new int[list.size()];

		return list.toArray(array);
	}

	private int maxOfPrimeDivisors(int n) {

		int[] result = findPrimeDivisor(n);

		Arrays.sort(result);

		return result[result.length - 1];
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		PrimeDivisor pd = new PrimeDivisor();

		System.out.println(pd.maxOfPrimeDivisors(13195));
	}

}

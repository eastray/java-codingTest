package problem36;

import java.math.BigInteger;

public class Palindrome {

	public BigInteger sumOfPalindrome() {
		
		BigInteger result = BigInteger.ZERO;
		
		for (int i = 1; i <= 1000000; i++) {

			boolean flag = true;
			StringBuilder index = new StringBuilder(Integer.toString(i));
			
			if(!index.substring(0, index.length()/2).equals(index.reverse().subSequence(0, index.length()/2)))
				flag = false;

			if (flag) {
				boolean subFlag = true;
				StringBuilder sb = new StringBuilder(Integer.toBinaryString(i));
				
				int mid = sb.length()/2;
				
				if(!sb.substring(0, mid).equals(sb.reverse().substring(0, mid)))
					subFlag = false;
				
				if (subFlag)
					result = result.add(BigInteger.valueOf(i));

			}
		}

		return result;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Palindrome pd = new Palindrome();

		System.out.println(pd.sumOfPalindrome());
		System.out.println(872187);
	}

}

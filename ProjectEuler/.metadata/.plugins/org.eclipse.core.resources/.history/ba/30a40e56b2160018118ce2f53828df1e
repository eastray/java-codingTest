package problem16;

import java.math.BigInteger;

public class Pow {

	private BigInteger sumOfPow(int n) {

		String str = Integer.toString((int) Math.pow(2, n));
		BigInteger result = BigInteger.ZERO;

		for (int i = 0; i < str.length(); i++)
			result.add(BigInteger.valueOf(Long.parseLong(str.substring(i, i+1))));

		System.out.println("2^" + n + ": " + str);

		return result;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Pow pow = new Pow();

		System.out.println(pow.sumOfPow(15));
		System.out.println(pow.sumOfPow(1000));
	}

}
